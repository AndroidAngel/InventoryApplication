<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //ListItem
    <style name="ProductListItemImageProduct">
        
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ProductListItemNameProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProductListItemPriceProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#484f93</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextAvailabilityListItem">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
</style>

    <style name="ListItemQuantity">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="ListItemBuyIconTheme">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>

